{
  "compilerOptions": {
    "strict": true,
    "target": "ES2020",
    "module": "ES2015",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true,
    "lib": ["ESNext"],
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "typedocOptions": {
    "name": "MobX RESTful migrator",
    "excludeExternals": true,
    "excludePrivate": true,
    "readme": "./README.md",
    "plugin": ["typedoc-plugin-mdn-links"]
  }
}
